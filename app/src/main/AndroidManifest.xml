<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sogilis.sogimailer">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="com.sogilis.sogimailer.AUTO" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/*"/>
			</intent-filter>
		</activity>

		<service android:name=".SogiMailerService"
				 android:icon="@android:drawable/ic_dialog_email"
				 android:label="@string/sogi_mailer_service_title">

			<intent-filter>
				<action android:name="com.sogilis.sogimailer.AUTO2" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>

		</service>

	</application>

</manifest>
